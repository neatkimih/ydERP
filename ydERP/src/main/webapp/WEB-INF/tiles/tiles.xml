<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<!-- base-definition -->
	<definition name="mainTemplate" template="/WEB-INF/views/tiles/defaultLayout.jsp">
		<put-attribute name="title" value="Yedam Oracle" />
		<put-attribute name="header" value="/WEB-INF/views/tiles/defaultHeader.jsp" />
		<put-attribute name="menu" value="/WEB-INF/views/tiles/defaultMenu.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/tiles/defaultFooter.jsp" />
	</definition>

	<definition name="/" >
		<put-attribute name="title" value="Welcome" />
		<put-attribute name="content" value="${pageContext.request.contextPath}/login.jsp" />
	</definition>

	<!-- Home Page -->
	<definition name="/home" extends="mainTemplate">
		<put-attribute name="title" value="Welcome" />
		<put-attribute name="content" value="/WEB-INF/views/home.jsp" />
	</definition>

	<definition name="*/*" extends="mainTemplate">
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>

</tiles-definitions>
